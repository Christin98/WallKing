<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:background="?my_background"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/mainContent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           >

            <com.google.android.material.appbar.AppBarLayout
                android:theme="@style/Theme.WallpaperApp.AppBarOverlay"
                android:id="@+id/app_bar_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:elevation="0.0dip"
                app:expanded="true">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:fitsSystemWindows="true"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:contentScrim="@android:color/transparent"
                    app:layout_scrollFlags="enterAlways|scroll">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/app_bar"
                            layout="@layout/app_bar" />

                    </LinearLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:background="@color/transparent"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/TAB_HEIGHT"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="8.0dip"
                    app:layout_scrollFlags="scroll"
                    app:tabBackground="@color/transparent"
                    app:tabIndicator="@drawable/selector_tab_indicator"
                    app:tabIndicatorFullWidth="true"
                    app:tabIndicatorHeight="@dimen/TAB_HEIGHT"
                    app:tabMode="scrollable"
                    app:tabTextAppearance="@style/MineCustomTabText"
                    app:tabTextColor="?my_textColor" />

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

