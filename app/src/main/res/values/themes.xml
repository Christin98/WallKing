<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WallpaperApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="my_textColor">@color/textColorPrimary</item>

        <item name="my_background">@color/colorPrimary</item>

        <item name="my_textColor_left_drawer">#ff444444</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WallpaperApp.AppBarOverlay" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="MyCustomToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textColorPrimary">?my_textColor</item>
        <item name="android:textColorSecondary">?my_textColor</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="colorControlHighlight">?my_textColor</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="MineCustomTabText" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/TAB_TEXT_SIZE</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.navTheme" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="android:textSize">13.0sp</item>
        <item name="colorControlHighlight">@color/grey_300</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

</resources>